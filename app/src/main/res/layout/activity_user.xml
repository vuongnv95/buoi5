<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/get_list_user_btn"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:text="Danh sách người dùng"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/add_user_btn"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@+id/get_list_user_btn"
        app:layout_constraintEnd_toEndOf="@+id/get_list_user_btn"
        app:layout_constraintTop_toBottomOf="@+id/get_list_user_btn"
        android:layout_marginTop="24dp"
        android:text="Thêm người dùng"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/edit_user_btn"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@+id/get_list_user_btn"
        app:layout_constraintEnd_toEndOf="@+id/get_list_user_btn"
        app:layout_constraintTop_toBottomOf="@+id/add_user_btn"
        android:layout_marginTop="24dp"
        android:text="Sửa người dùng"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>